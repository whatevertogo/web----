{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2024",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2024"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ]
}